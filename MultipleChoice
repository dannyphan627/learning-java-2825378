import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        String question = "What is my favorite animal?";
        String choiceOne = "Cat";
        String choiceTwo = "Dog";
        String choiceThree = "Pig";

        String correctAnswer = choiceTwo;

        System.out.println("Choose the correct answer for this question: " + question +
                " Which of the following is correct: 1)" + choiceOne + " 2)" + choiceTwo + " 3)" + choiceThree);

        Scanner scanner = new Scanner(System.in);
        String inputAnswer = scanner.next();

        if(inputAnswer.equals(choiceTwo)){
            System.out.println("Congratulations! That was the correct answer!");
        } else {
            System.out.println("Sorry that was incorrect. The correct answer was " + choiceTwo);
        };
    }


}
